<div class="table-responsive">
  <table class="table">
      <thead>
          <tr>
              <th>Item ID</th>
              <th>Title</th>
              <th>Post Date</th>
              <th>Price</th>
              <th>Category</th>
              <th>Published</th>
          </tr>
      </thead>
      <tbody>
        <% if (items && items.length > 0) { %>
          <% items.forEach(item => { %>
              <tr>
                  <td><%= item.id %></td>
                  <td><%= item.title %></td>
                  <td><%= item.postDate %></td>
                  <td><%= item.price %></td>
                  <td>
                      <a href="/items?category=<%= item.category %>"><%= item.category %></a>
                  </td>
                  <td><%= item.published ? 'Yes' : 'No' %></td>
              </tr>
          <% }); %>
        <% } else { %>
          <tr><td colspan="6">No items found.</td></tr>
        <% } %>
      </tbody>
  </table>
</div>

<div class="col-md-12 text-center">
  <% if (message) { %>
      <strong><%= message %></strong>
  <% } %>
</div>
