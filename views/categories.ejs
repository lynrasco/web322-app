<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(function(category) { %>
                <tr>
                    <td><%= category.id %></td>
                    <td><%= category.category %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% if (message) { %>
        <p><%= message %></p>
        <% } %>
    </div>
</div>
